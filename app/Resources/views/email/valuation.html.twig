
<table style="max-width: 960px; border:none; border-collapse:collapse; border-spacing:0;font-family:Arial, Helvetica, sans-serif;  color: #363637;font-size: 15px;font-weight: 400;line-height: 20px; margin:0 auto;">
    <tr>
        <td style="border-bottom:1px solid #eaeaea; width:100%; padding-bottom:13px;">
            <table width="100%" style=" border:none; border-collapse:collapse; border-spacing:0;">
                <tr>
                    <td style="width:50%; text-align:right;">
                        <p style="font-family:Arial, Helvetica, sans-serif; font-size:13px; color:#4e4847; font-style:italic;">
                            Zakład Wiercenia Studziennych
                            <a href="http://www.zws.com.pl" style="background:#02b25f; padding:7px 13px; color:#fff; font-family:Arial, Helvetica, sans-serif; font-weight:bold; text-decoration:none; font-style:normal; margin-left:10px;">www.zws.com.pl</a>
                        </p>
                    </td>
                </tr>
            </table>
        </td>
    </tr>

    <tr>
        <td  style=" width:100%; padding:20px 0;">
            <h3>Numer zlecenia : ZWS/{{ 'now'|date('Y') }}/{{ task.id }}</h3>
        </td>
    </tr>

    <tr>
        <td style="border-bottom:1px solid #eaeaea;">
            <table width="100%" style=" width:100%; border:none; border-collapse:collapse; border-spacing:0;">
                <tr>
                    <td style="text-align:left; vertical-align:bottom; padding:0 0 20px;">
                        <p>
                            <strong>Twoje dane </strong>
                            <br>Imię i nazwisko: {{ user.name }} {{ user.surname }}
                            <br>Telefon: {{ user.phone }}
                            <br>Email: {{ user.email }}
                            <br>Adres: {{ user.place }} {{ user.postCode }} {{ user.street }} {{ user.houseNumber }}
                        </p>

                        <p>
                            <strong>Miejsce zlecenia: </strong>
                            <br>Adres: {{ task.place }} {{ task.postCode }} {{ task.street }} {{ task.houseNumber }}
                            <br>Numer działki: {{ task.nrPlot }}
                        </p>

                        <p>
                            <strong>Zlecenie: </strong>
                            <br>Rodzaja zlecenia: {{ task.task }}
                            {% if task.term %}
                                <br>Szacowany temin realizacji: {{ task.term }}
                            {% endif %}
                            <br>Uwagi: {{ task.comments }}
                        </p>

                        <p>
                            <h2>Koszt wykonania zlecenia <b>{{ task.valuation }}</b>zł brutto</h2>
                            Termin wykonania zlecenia: {{ task.date|date('d/m/Y') }}
                            <br>Dodatkowe informacje: {{ task.valuationComments }}
                        </p>
                    </td>
                </tr>
            </table>
        </td>
    </tr>
</table>
