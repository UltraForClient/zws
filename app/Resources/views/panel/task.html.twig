{% extends 'panel/panel.html.twig' %}

{% block content %}
<div class="tab-content">
    <div class="tab-pane active" id="m_user_profile_tab_1">
        <div class="m-form m-form--fit m-form--label-align-right">
            <div class="m-portlet__body">
                <div class="form-group m-form__group row">
                    <div class="col-10 ml-auto">
                        <h3 class="m-form__section">
                            Dane osobiste
                        </h3>
                    </div>
                </div>
                <div class="form-group m-form__group row">
                    <label for="example-text-input" class="col-2 col-form-label">
                        Imię i nazwisko klienta zlecającego:
                    </label>
                    <div class="col-7">
                        <p class="form-control m-input">{{ task.user.name }} {{ task.user.surname }}</p>
                    </div>
                </div>
                <div class="form-group m-form__group row">
                    <label for="example-text-input" class="col-2 col-form-label">
                        Telefon kontaktowy:
                    </label>
                    <div class="col-7">
                        <p class="form-control m-input">{{ task.user.phone }}</p>
                    </div>
                </div>
                <div class="form-group m-form__group row">
                    <label for="example-text-input" class="col-2 col-form-label">
                        Adres:
                    </label>
                    <div class="col-7">
                        <p class="form-control m-input">{{ task.postCode }} {{ task.place }} - {{ task.street }} {{ task.houseNumber }}</p>
                    </div>
                </div>
                <div class="form-group m-form__group row">
                    <label for="example-text-input" class="col-2 col-form-label">
                        Rodzja zlecenia:
                    </label>
                    <div class="col-7">
                        <p class="form-control m-input">{{ task.task }}</p>
                    </div>
                </div>
                <div class="form-group m-form__group row">
                    <label for="example-text-input" class="col-2 col-form-label">
                        Numer działki:
                    </label>
                    <div class="col-7">
                        <p class="form-control m-input">{{ task.nrPlot }}</p>
                    </div>
                </div>
                <div class="form-group m-form__group row">
                    <label for="example-text-input" class="col-2 col-form-label">
                        Uwagi:
                    </label>
                    <div class="col-7">
                        <p class="form-control m-input" style="height: 100%;">{{ task.comments }}</p>
                    </div>
                </div>
                {% if task.term %}
                    <div class="form-group m-form__group row">
                        <label for="example-text-input" class="col-2 col-form-label">
                            Podany przewidywany termin realizacji:
                        </label>
                        <div class="col-7">
                            <p class="form-control m-input" style="height: 100%;">{{ task.term }}</p>
                        </div>
                    </div>
                {% endif %}
                {% if task.image %}
                <div class="form-group m-form__group row">
                    <label for="example-text-input" class="col-2 col-form-label">
                        Dołączony plik:
                    </label>
                    <div class="col-7">
                        <a href="{{ app.request.getUriForPath(vich_uploader_asset(task, 'imageFile')) }}" target="_blank">Pokaż plik</a>
                    </div>
                </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
