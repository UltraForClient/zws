{% extends 'admin/layout.html.twig' %}

{% block content %}
    <div class="m-grid m-grid--hor m-grid--root m-page">
        <div class="m-grid__item m-grid__item--fluid m-grid m-grid--hor m-login m-login--signin m-login--2 m-login-2--skin-2" id="m_login">
            <div class="m-grid__item m-grid__item--fluid	m-login__wrapper">
                <div class="m-login__container">
                    <div class="m-login__head">
                        <h3 class="m-login__title">Zmień hasło</h3>
                    </div>
                    {% if error %}
                    <div class="alert alert-danger">
                        Podane hasła nie są takie same.
                    </div>
                    {% endif %}
                    <form class="m-login__form m-form" method="POST">
                        <div class="form-group m-form__group">
                            <label for="password"></label>
                            <input class="form-control m-input" type="password" placeholder="Hasło" name="password" id="password" autocomplete="off">
                        </div>
                        <div class="form-group m-form__group">
                            <label for="rePassword"></label>
                            <input class="form-control m-input" type="password" placeholder="Powtórz hasło" name="rePassword" id="rePassword" autocomplete="off">
                        </div>
                        <div class="m-login__form-action">
                            <button id="m_login_forget_password_submit" class="btn btn-focus m-btn m-btn--pill m-btn--custom m-btn--air  m-login__btn m-login__btn--primaryr" type="submit">Wyślij</button>
                            &nbsp;&nbsp;
                            <a id="m_login_forget_password_cancel" class="btn btn-outline-focus m-btn m-btn--pill m-btn--custom m-login__btn" href="{{ path('admin') }}">Anuluj</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
